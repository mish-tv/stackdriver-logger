{

  // ---------------------------------------------------------------------------------------------------------------------------
  // エディタ
  // ---------------------------------------------------------------------------------------------------------------------------
  "editor.tabCompletion": "on",
  "editor.rulers": [128],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },


  // ---------------------------------------------------------------------------------------------------------------------------
  // ファイル
  // ---------------------------------------------------------------------------------------------------------------------------
  "files.exclude": {
    "**/node_modules": true,
    "**/.cache": true,
    "**/.vercel": true,
    "**/.next": true,
    "packages/**/lib": true,
    "projects/server/**/lib": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/.cache/**": true,
    "**/.vercel/**": true,
    "**/.next/**": true
  },
  "search.followSymlinks": true,


  // ---------------------------------------------------------------------------------------------------------------------------
  // エクステンション
  // ---------------------------------------------------------------------------------------------------------------------------
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "stylelint.validate": ["css"],


  // ---------------------------------------------------------------------------------------------------------------------------
  // 言語
  // ---------------------------------------------------------------------------------------------------------------------------
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.suggest.autoImports": false,

  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

}
